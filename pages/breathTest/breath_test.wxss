.MainBody{
  width: 100%;
}

.contral_block{
  margin-top: 50rpx;
  padding:0 40rpx;
  font-size: 30rpx;
}

.btns{
  display: flex;
  height: 90rpx;
  width: 670rpx;
  line-height: 90rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.btns>text{
  flex:1;
  text-align: center;
}

.btns>view{
  flex: 0 160rpx;
  height: 90rpx;
  background: #93dd9b;
  text-align: center;
  line-height: 90rpx;
  font-size: 30rpx;
}

.console{
  padding: 0 25rpx;
  word-break: break-all;
}
.echart{
  height: 500rpx;
  width: 750rpx;
  display: inline-block
}
ec-canvas {
  width: 100%;
  height: 100%;
}


.graphs_choose{
  display: flex;
  padding: 0 255rpx;
}
.graphs_choose>view{
  font-size: 28rpx;
  flex: 0 0 120rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #eeeeee;
}
.graphs_choose>view:first-child{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.graphs_choose>view:last-child{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.activity_graph{
  background: #93dd9b;
}
.dddd{
  position: absolute;
  width: 750rpx;
  height: 500rpx;
  background: #ffffff;
  opacity: 0.3;
  z-index: 100;
}