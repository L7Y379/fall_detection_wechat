/* pages/connect/connect.wxss */
page{
  background: #f5f5f5;
}
.banner{
  width: 750rpx;
}

.item{
  background: #ffffff;
  width: 700rpx;
  height: 200rpx;
  margin: 25rpx;
  border-radius: 10rpx;
  color: #4b4b4b;
  padding-bottom: 20rpx;
}
.title{
  padding: 25rpx;
}
.function_items{
  display: flex;
}
.btn{
  background: #93dd9b;
  font-size: 30rpx;
  width: 650rpx;
  height: 100rpx;
  line-height: 90rpx;
  text-align:center;
  border-radius: 40rpx;
  margin: 50rpx;
  opacity: 0.8;
  box-shadow: 0 0 10rpx #93dd9b;
}
.fc_item{
  font-size: 26rpx;
  display: flex;
  flex-direction: column;
  width: 230rpx;
  align-items: center;
}
.fc_item>image{
  width: 60rpx;
  height: 60rpx;
}
.fc_item>text{
  padding-top: 10rpx;
}
