.MainBody{
  width: 100%;
}
.storageFile{
  display: flex;
  padding: 25rpx 50rpx;
}
.storageFile>text:first-child{
  flex: 0 0 180rpx;
}
.storageFile>text:last-child{
  flex: 1;
}

.ipt_body{
  width: 670rpx;
  padding: 20rpx 20rpx;
  padding-bottom: 10rpx;
  display: flex;
}

.ipt_body>input{
  flex: 1;
  line-height: 100rpx;
  height: 100rpx;
  border-bottom: 1rpx solid #eeeeee;
  font-size: 30rpx;
  text-align: center;
}
.if_refresh_name{
  display: flex;
  flex-direction: column;
  font-size: 25rpx;
  align-items: center;
  flex: 0 200rpx;
  height: 100rpx;
}
.st{
  transform:scale(0.8)
}
.contral_block{
  padding: 80rpx 30rpx;
  font-size: 35rpx;
}

.btns{

  display: flex;
  height: 160rpx;
  width: 670rpx;
  line-height: 90rpx;
  border-radius: 15rpx;
  overflow: hidden;
}

.btns>text{
  flex:1;
  text-align: center;
}

.btns>view{
  flex: 0 160rpx;
  height: 150rpx;
  width: 200rpx;
  background: #93dd9b;
  text-align: center;
  line-height: 90rpx;
  font-size: 40rpx;
}

.console{
  padding: 100rpx 20rpx;
  padding-bottom: 10rpx;
  word-break: break-all;
}
.echart{
  height: 500rpx;
  width: 750rpx;
  display: inline-block
}
ec-canvas {
  width: 100%;
  height: 100%;
}

.mask{
  position: fixed;
  top: 0;
  width: 750rpx;
  height: 100%;
  background: #aaaaaa;
  z-index: 100;
  opacity: 0.7;
}
.storageFile_box{
  position: fixed;
  width: 600rpx;
  height: 60%;
  left: 50rpx;
  top:20%;
  background: #ffffff;
  z-index: 200;
  padding: 25rpx;
  font-size: 28rpx;
}


.graphs_choose{
  display: flex;
  padding: 0 255rpx;
}
.graphs_choose>view{
  font-size: 28rpx;
  flex: 0 0 120rpx;
  line-height: 60rpx;
  text-align: center;
  border: 1rpx solid #eeeeee;
}
.graphs_choose>view:first-child{
  border-top-left-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}
.graphs_choose>view:last-child{
  border-top-right-radius: 10rpx;
  border-bottom-right-radius: 10rpx;
}
.activity_graph{
  background: #93dd9b;
}
.dddd{
  position: absolute;
  width: 750rpx;
  height: 500rpx;
  background: #ffffff;
  opacity: 0.3;
  z-index: 100;
}