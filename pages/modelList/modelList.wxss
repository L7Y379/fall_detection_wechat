/* pages/fileDetail/fileDetail.wxss */

.file_item{
  padding: 20rpx 25rpx;
  width: 700rpx;
  display: flex;
  color: #4b4b4b;
}
.file_item>image{
  flex: 0 0 120rpx;
  height: 120rpx;
}
.file_item>view{
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
}
.file_item>view>text:first-child{
  font-size: 32rpx;
  line-height: 60rpx;
  flex: 0 0 60rpx;
  width: 500rpx;
  overflow: hidden;
  text-overflow: ellipsis;
}
.file_item>view>text:last-child{
  font-size: 26rpx;
  line-height: 40rpx;
  flex: 0 0 40rpx;
  width: 500rpx;
}
